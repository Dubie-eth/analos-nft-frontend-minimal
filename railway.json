{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "HOSTNAME=0.0.0.0 PORT=${PORT:-3000} node .next/standalone/server.js",
    "healthcheckPath": "/api/health-simple",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
